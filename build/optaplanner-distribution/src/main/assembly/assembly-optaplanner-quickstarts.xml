<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

  <id>assembly-optaplanner-quickstarts</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <componentDescriptors>
    <componentDescriptor>src/main/assembly/sources.xml</componentDescriptor>
  </componentDescriptors>

  <fileSets>
    <fileSet>
      <directory>../..</directory>
      <includes>
        <include>LICENSE.txt</include>
      </includes>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/resources</directory>
      <filtered>false</filtered>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
      <outputDirectory/>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>dos</lineEnding>
      <filtered>true</filtered>
      <outputDirectory/>
      <includes>
        <include>**/*.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../quickstarts-showcase/target</directory>
      <outputDirectory>quickstarts/binaries</outputDirectory>
      <includes>
        <include>quarkus-app/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../../use-cases/school-timetabling/target</directory>
      <outputDirectory>quickstarts/binaries/use-cases/school-timetabling</outputDirectory>
      <includes>
        <include>quarkus-app/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../../use-cases/facility-location/target</directory>
      <outputDirectory>quickstarts/binaries/use-cases/facility-location</outputDirectory>
      <includes>
        <include>quarkus-app/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../../use-cases/maintenance-scheduling/target</directory>
      <outputDirectory>quickstarts/binaries/use-cases/maintenance-scheduling</outputDirectory>
      <includes>
        <include>quarkus-app/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../../use-cases/vaccination-scheduling/target</directory>
      <outputDirectory>quickstarts/binaries/use-cases/vaccination-scheduling</outputDirectory>
      <includes>
        <include>quarkus-app/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../../use-cases/vehicle-routing/target</directory>
      <outputDirectory>quickstarts/binaries/use-cases/vehicle-routing</outputDirectory>
      <includes>
        <include>quarkus-app/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../../use-cases/call-center/target</directory>
      <outputDirectory>quickstarts/binaries/use-cases/call-center</outputDirectory>
      <includes>
        <include>quarkus-app/**</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.optaplanner:optaplanner-distribution-internal:zip</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory/>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>

</assembly>
